{
  "name": "craft-food-catering",
  "version": "1.0.0",
  "scripts": {
    "build:css": "sass docs/scss/styles.scss dist/styles.css",
    "build:ts": "tsc",
    "watch:css": "sass --watch docs/scss/styles.scss:dist/styles.css",
    "watch:ts": "tsc --watch",
    "watch": "npm-run-all --parallel watch:css watch:ts"
  },
  "devDependencies": {
    "sass": "^1.79.4",
    "typescript": "^5.6.2",
    "npm-run-all": "^4.1.5"
  }
}
